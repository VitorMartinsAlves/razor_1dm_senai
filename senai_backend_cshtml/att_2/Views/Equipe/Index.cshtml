@Model
@{
        ViewData["Title"] = "Equipes";
    }

<div class="titulo_pagina">
<h1>Cadastro de @ViewData["Title"]</h1>
</div>

    <form  class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
 <div class="campo">
    <label>ID</label>
    <input type="text" name="IdEquipe" />
 </div>
   
<div class="campo">
    <label>Nome</label>
    <input type="text" name="Nome" />
</div>
    
<div class="campo">
    <label>Imagem</label>
    <input type="file" name="Imagem" />
</div>
    

    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.Equipes){
            <tr>
                <td>@item.IdEquipe</td>
                <td>@item.Nome</td>
                <td><img src="img/Equipes/@item.Imagem" alt="Imagem da equipe @item.Nome" width="40"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@item.IdEquipe"><i class="fa fa-trash"></a></td>
            </tr>
        }
    </tbody>
</table>